.notfound__container
  display flex
  align-items flex-start
  max-width 1620px
  margin 0 auto
  padding 0 10px

.notfound__wrap
  position relative

.notfound__message
  position absolute
  z-index 1
  top 35%
  right -40%
  display block
  padding 30px
  padding-bottom 40px
  max-width 600px
  border-radius 50%
  box-shadow inset 0 0 5px 5px rgba(255,255,255,0.5), 0 0 5px 5px rgba(255,255,255,0.5)
  color rgba(255,255,255,0.5)
  font-size 72px
  line-height 92px
  font-weight 700
  text-align center
  transform rotate(-15deg)

.notfound__img
  display block
  position relative
//width 100%

.notfound__desc
  display flex
  flex-direction column
  align-items center
  max-width 600px


.notfound__title
  display block
  margin 0 0 40px 0
  font-size 24px
  font-weight 600

.notfound__text
  display block
  margin 0 0 30px 0
  font-size 16px
  line-height 22px
  text-align center
  .notfound__span
    text-decoration line-through

.notfound__btn
  max-width 100px
  min-height 80px
  cursor pointer
